{{> navbar/navbar}}

<div class="jumbotron jumbotron-fluid project-jumbo">
    <h1 class="text-center pb-5 project-head">{{project.name}}</h1>
</div>

<div class="container" id="portfolio-container">
    <img src="../{{project.image}}" style="width: 100%">

    <div class="row">
        <div class="col-md-12">
            <h4 class="project-heading">PROJECT OVERVIEW</h4>
            <p class="project-text mt-4">
            {{{project.description}}}
            </p>
        </div>
    </div>

    <div class="row justify-content-center pt-4 pb-4 mt-5" id="button-row">
        <div class="col-md-2 text-center mt-2 mb-2">
            <a href="{{project.site_link}}" target="_blank" class="btn btn-lg project-btn">Live Site</a>
        </div>
        <div class="col-md-2 text-center mt-2 mb-2">
            <a href="{{project.git_link}}" target="_blank" class="btn btn-lg project-btn">Code Repo</a>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <h4 class="project-heading mb-4">Tech Stack</h4>
                <ul>
                    {{#each project.tech}}
                        <li class="project-extra-text">{{{this}}}</li>
                    {{/each}}
                </ul>
        </div>

        <div class="col-md-6">
            <h4 class="project-heading mb-4">Project Timeline</h4>
            <ul>
                {{#each project.timeline}}
                    <li class="project-extra-text">{{{this}}}</li>
                {{/each}}
            </ul>
        </div>

    </div>

    <div class="row mb-5">

        <div class="col-md-6 mb-5">
            <h4 class="project-heading mb-4">Major Challenges and Solutions</h4>
                {{#each project.challenges}}
                    <p class="project-extra-text">{{this}}</p>
                {{/each}}          
        </div>

        <div class="col-md-6 mb-5">
            <h4 class="project-heading mb-4">Future Goals</h4>
            <ul>
                    {{#each project.goals}}
                        <li class="project-extra-text">{{{this}}}</li>
                    {{/each}}
            </ul>
        </div>
    </div>
        
    <div class="row mt-5 pt-4 pb-4" id="cta-return">
        <div class="col-md-12 text-center">
            <a href="/#projects" class="btn btn-lg return-btn">Return to Projects</a>
        </div>
    </div>
